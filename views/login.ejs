<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <%- include('partials/header') %>
    <link rel='stylesheet' href='/styles/login.css' />
  </head>
  <body>
    <div class="login">
      <%- message %>
      <form class="form form__login" method="post" action="/login">
        <h1 class="form--title">
          <% include('partials/logo') %>
          Welcome to GradePro!
        </h1>
        <input autofocus class="form--input" type="text" name="username" placeholder="Username" autocomplete="username">
        <input class="form--input" type="password" name="password" placeholder="Password" autocomplete="current-password">
        <small>Passwords will be stored as an AES encrypted credentials object.</small><br>
        <input type="checkbox" name="save">Save Password<br>
        <input class="form--submit" type="submit" value="Login"><br>  
      </form>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
