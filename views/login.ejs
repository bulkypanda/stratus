<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <%- include partials/header %>
    <link rel='stylesheet' href='/styles/login.css' />
  </head>
  <body>
    <div class="login">
      <%- message %>
      <form class="form form__login" method="post" action="/login">
        <h1 class="form--title">
          <% include partials/logo %>
        </h1>
        <input autofocus class="form--input" type="text" name="username" placeholder="Username" autocomplete="username">
        <input class="form--input" type="password" name="password" placeholder="Password" autocomplete="current-password">
        <input type="checkbox" name="save">Save Password<br>
        <input class="form--submit" type="submit" value="Login">
      </form>
    </div>
  </body>
</html>
