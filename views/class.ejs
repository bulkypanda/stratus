<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <%- include partials/header %>
    <link rel='stylesheet' href='/stylesheets/class.css' />
    <link rel='stylesheet' href='/stylesheets/main.css' />
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0/dist/Chart.min.js"></script>
  </head>
  <body>
    <%- include partials/nav %>
    <div class="main">
      <h1 class="main--welcome"><%= title %></h1>
      <div class="chart-container">
        <canvas id="class-data" height="25" width="100"></canvas>
      </div>
      <script>
var ctx = document.getElementById('class-data').getContext('2d');
var data = {
    labels: ["Assignments", "Tests"],
    datasets: [
        {
            label: "Score",
            backgroundColor: "rgba(255, 99, 132, 0.2)",
            data: [25, 32]
        },
        {
            label: "Possible",
            backgroundColor: "rgba(54, 162, 235, 0.2)",
            data: [30, 70]
        }
    ]
};
var myChart = new Chart(ctx, {
    type: 'bar',
    data: data,
    options: {
        scales: {
            xAxes: [{
              barThickness: 100
            }],
            yAxes: [{
                ticks: {
                    beginAtZero: true,
                    max: 100,
                    stepsize: 10
                }
            }]
        }
    }
});
</script>
      
      <table class="assignments">
        <thead>
          <th>Name</th>
          <th>Category</th>
          <th>Points Earned</th>
          <th>Points Possible</th>
        </thead>
        <tbody>
        <% for(var i=0; i < 7; i++) { %>
          <tr>
            <td>Assignment <%= i %></td>
            <td>Assignments</td>
            <td>
              <input type="number">
            </td>
            <td>
              <input  type="number">
            </td>
          </tr>
        <% } %>
        </tbody>
        
      </table>
    </div>

    </div>
  </body>
</html>
